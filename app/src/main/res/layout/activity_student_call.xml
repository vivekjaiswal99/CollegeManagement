<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/forty_three"
    tools:context=".StudentCall">

    <ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:src="@drawable/studentpreview">
</ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="please enter a user name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="15dp"
                    android:textColorHint="@color/black"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="65dp"
                    android:padding="8dp">
                </EditText>
                <EditText
                    android:id="@+id/course_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="please enter a course name"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/baseline_menu_book_25"
                    android:drawablePadding="15dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:padding="8dp">
                </EditText>
                <EditText
                    android:id="@+id/phone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="please enter a phone number"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/baseline_phone_24"
                    android:drawablePadding="15dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:background="@drawable/custom_edit_text"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="5dp"
                    android:padding="8dp">
                </EditText>
                <Button
                    android:id="@+id/enter_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:layout_margin="12dp"
                    android:textColor="@color/white"
                    android:text="ENTER"
                    android:textStyle="bold"
                    android:textSize="20dp">
                </Button>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>