<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/twoes"
    android:orientation="vertical"
    tools:context=".AdminFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="1350dp"
            android:layout_row="4"
            android:columnCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/AdTeacherDetail"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="6dp"
                app:cardBackgroundColor="#FF9800">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/teacher_detail_gets"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ENTER TEACHER DETAILS"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdSetCollegeDetail"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="#6510FD">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/university_detail_get"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ENTER COLLEGE DETAILS"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdSetCourseDetail"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="6dp"
                app:cardBackgroundColor="#00E2FF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/course_details_get"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ENTER COURSE DETAILS"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdStudentDetail"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#FF0057">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/student_detailss"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ONLINE ADMISSION CHECK DETAIL"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdSemesterDetail"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="6dp"
                app:cardBackgroundColor="#FFEB3B">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="105dp"
                        android:src="@drawable/semester_detail_get"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ENTER SEMESTER DETAILS"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdCollegeReview"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#DA00FF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/college_review_get"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="CHECK COLLEGE REVIEW"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdCollegeAddStudentAttendance"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="6dp"
                app:cardBackgroundColor="#00FFE7">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/add_student"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ADD STUDENT ATTENDANCE"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdCollegeStudentAttendance"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#89FF00">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/correct"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="STUDENT ATTENDANCE"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdSendNotificationImg"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#FF3D00">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/message2"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ADD NOTIFICATION"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdSendNotification"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#DA00FF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/messages1"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="SEND NOTIFICATION"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/AdDeleteImg"
                android:layout_width="180dp"
                android:layout_height="190dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="30dp"
                app:cardBackgroundColor="#008EFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="110dp"
                        android:src="@drawable/delete1"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center">
                    </ImageView>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="ITEMS DELETE"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </LinearLayout>

</ScrollView>