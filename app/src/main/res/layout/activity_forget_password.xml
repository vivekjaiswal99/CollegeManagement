<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/twent_nine"
    tools:context=".ForgetPassword">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/email_edt"
                    android:layout_marginTop="150dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="please enter a email id"
                    android:textSize="15dp"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="15dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:background="@drawable/custom_edit_text"
                    android:padding="9dp">
                </EditText>
                <EditText
                    android:id="@+id/password_edt"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="please enter a password"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:drawableLeft="@drawable/baseline_apps_24"
                    android:drawablePadding="15dp"
                    android:background="@drawable/custom_edit_text"
                    android:padding="9dp">
                </EditText>
                <EditText
                    android:id="@+id/password_edt2"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="please enter a confirm password"
                    android:drawableLeft="@drawable/baseline_apps_24"
                    android:drawablePadding="15dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColorHint="@color/black"
                android:background="@drawable/custom_edit_text"
                android:padding="9dp">
            </EditText>
                <Button
                    android:id="@+id/enter_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:text="ENTER"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>