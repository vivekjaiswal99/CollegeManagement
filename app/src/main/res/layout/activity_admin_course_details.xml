<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/oness"
    tools:context=".AdminCourseDetails">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/course_details_get">
    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="850dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/CourseName_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter a course name"
                    android:drawableLeft="@drawable/baseline_menu_book_25"
                    android:padding="9dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="57dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/CourseDuration_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter course duration time"
                    android:drawableLeft="@drawable/baseline_menu_book_25"
                    android:padding="9dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/CourseFess_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter course fess"
                    android:drawableLeft="@drawable/baseline_menu_book_25"
                    android:padding="9dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/CourseEligibility_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter course eligibility"
                    android:drawableLeft="@drawable/baseline_menu_book_25"
                    android:padding="9dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/CoursePercentage_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please class 12 minimum marks"
                    android:drawableLeft="@drawable/baseline_menu_book_25"
                    android:padding="9dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <Button
                    android:id="@+id/submits_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUBMIT"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/black">
                </Button>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>