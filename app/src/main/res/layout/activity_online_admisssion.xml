<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/twenty_four"
    android:orientation="vertical"
    tools:context=".OnlineAdmission">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="950dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/Name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter a user name"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/online_admission_custom_edit_view"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/Email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter a user email"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/online_admission_custom_edit_view"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <RadioGroup
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/online_admission_custom_edit_view"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp">
                    <RadioButton
                        android:id="@+id/male_rb"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold">
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/female_rb"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp">
                    </RadioButton>
                </RadioGroup>
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/Course"
                    android:background="@drawable/custom_spinner"
                    android:padding="10dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="5dp">
                </Spinner>
                <EditText
                    android:id="@+id/FatherName_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter father name"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/online_admission_custom_edit_view"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/Location_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter user location"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/online_admission_custom_edit_view"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/Number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Please enter user number"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/online_admission_custom_edit_view"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <Button
                    android:id="@+id/enter_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENTER"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>