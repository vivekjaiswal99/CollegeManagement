<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/twenty_five"
    tools:context=".SetTeacherDetail">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/teacher_detail_gets">
    </ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="900dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter a teacher name"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter a teacher email"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/department_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter teacher department"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/qualification_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter teacher qualification"
                    android:drawableLeft="@drawable/baseline_menu_book_25"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/experience_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter teacher experience"
                    android:drawableLeft="@drawable/baseline_format_list_numbered_24"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <EditText
                    android:id="@+id/call_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter phone number"
                    android:drawableLeft="@drawable/baseline_phone_24"
                    android:padding="7dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_edit_text"
                    android:drawablePadding="15dp"
                    android:layout_marginBottom="2dp">
                </EditText>
                <Button
                    android:id="@+id/submit_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SUBMIT"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/black">
                </Button>
            </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>