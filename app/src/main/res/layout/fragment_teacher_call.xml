<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/thirty_five"
    tools:context=".TeacherCallFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="125dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="750dp"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter a teacher name"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="90dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:background="@drawable/custom_edit_text">
                </EditText>
                <EditText
                    android:id="@+id/department_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter teacher department"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:background="@drawable/custom_edit_text">
                </EditText>
                <EditText
                    android:id="@+id/phone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter teacher phone number"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColorHint="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="10dp"
                    android:drawablePadding="15dp"
                    android:drawableLeft="@drawable/baseline_phone_iphone_24"
                    android:background="@drawable/custom_edit_text">
                </EditText>
                <Button
                    android:id="@+id/enter_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:layout_margin="15dp"
                    android:text="ENTER"
                    android:textStyle="bold"
                    android:textSize="20dp">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>